run = "tsx index.ts"
entrypoint = "index.ts"
hidden = [".config", "package-lock.json", "tsconfig.json"]
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", ".config"]

[deployment]
run = ["tsx", "index.ts"]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 80

[workflows]
runButton = "Next.js Dev"

[[workflows.workflow]]
name = "Next.js Dev"
author = 45389901
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm run dev"
